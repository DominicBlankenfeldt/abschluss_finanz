{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": ["webpack-env"],
    "paths": {
      "@/*": ["src/*"]
    },
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx",
    "src/components/sidebar/Sidebar.vue",
    "src/views/Overview.vue",
    "src/components/home/btnCreate.vue",
    "src/components/home/btnDelete.vue",
    "src/components/settings/setupIncome.vue",
    "src/views/MoneyChecker.vue",
    "src/components/open/quickPickOpen.vue",
    "src/components/closed/quickPickClosed.vue",
    "src/components/closed/quickPickOpen.vue",
    "src/components/closed/quickPickClosed.vue"
  ],
  "exclude": ["node_modules"]
}
